{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.test.ts",
    "src/types/**/*",
    "src/interfaces/user-extensions.ts",
    "src/interfaces/shared-types.ts",
    "src/__tests__/**/*",
    "../../shared/**/*"
  ]
}
