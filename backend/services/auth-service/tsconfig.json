{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": "../../",
    "paths": {
      "@shared/*": ["shared/*"],
      "@corp-astro/shared-types": ["shared/types"],
      "@corp-astro/shared-types/*": ["shared/types/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "../../shared/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
