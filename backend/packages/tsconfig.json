{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2018"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "dist", "**/*.test.ts", "**/*.spec.ts"]
  }